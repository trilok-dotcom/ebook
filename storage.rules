rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Records path: /records/{doctorUid}/{patientUid}/{filename}
    match /records/{doctorUid}/{patientUid}/{allPaths=**} {
      // Doctor can write (upload/delete)
      allow write: if request.auth != null && request.auth.uid == doctorUid;
      
      // Doctor OR patient can read (download)
      allow read: if request.auth != null && (
        request.auth.uid == doctorUid || 
        request.auth.uid == patientUid
      );
    }
  }
}
