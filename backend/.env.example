# ============================================
# FILE: backend/.env.example
# ============================================
# Server Configuration
PORT=8000
HOST=0.0.0.0
ENVIRONMENT=development

# CORS - Comma-separated origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Firebase Admin SDK
# Option 1: JSON string (recommended for cloud deployment)
FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"your-project-id","private_key_id":"xxx","private_key":"-----BEGIN PRIVATE KEY-----\nYOUR_KEY\n-----END PRIVATE KEY-----\n","client_email":"firebase-adminsdk@your-project.iam.gserviceaccount.com","client_id":"xxx","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk%40your-project.iam.gserviceaccount.com"}

# Option 2: Path to JSON file (for local development)
# FIREBASE_SERVICE_ACCOUNT_PATH=./serviceAccountKey.json

FIREBASE_PROJECT_ID=your-project-id

# Application URL
BASE_APP_URL=http://localhost:5173

# Notification Configuration
# Supported channels: email, sms, push
NOTIFY_CHANNELS=email
NOTIFY_RETRY_ATTEMPTS=3
NOTIFY_TIMEOUT_SECONDS=30

# Email Configuration (Choose one)
# Option 1: SendGrid
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=SG.your_api_key_here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Your App Name

# Option 2: SMTP (Gmail, Outlook, etc.)
# EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=Your App Name

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_FROM_NUMBER=+1234567890

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting (requests per minute per user)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# File Upload Settings
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,dcm