# Comma-separated origins for CORS
ALLOWED_ORIGINS=http://localhost:5173,https://your-frontend.example.com

# Firebase Admin - prefer embedding JSON string for simple hosting
# Either provide FIREBASE_SERVICE_ACCOUNT_JSON or GOOGLE_APPLICATION_CREDENTIALS path
FIREBASE_SERVICE_ACCOUNT_JSON={
  "type": "service_account",
  "project_id": "your-project-id",
  "private_key_id": "...",
  "private_key": "-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n",
  "client_email": "firebase-adminsdk-abc@your-project-id.iam.gserviceaccount.com",
  "client_id": "...",
  "auth_uri": "https://accounts.google.com/o/oauth2/auth",
  "token_uri": "https://oauth2.googleapis.com/token",
  "auth_provider_x509_cert_url": "https://www.googleapis.com/oauth2/v1/certs",
  "client_x509_cert_url": "https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-abc%40your-project-id.iam.gserviceaccount.com"
}
FIREBASE_PROJECT_ID=your-project-id

# App base URL used in notifications
BASE_APP_URL=https://your-frontend.example.com

# Notification channels: comma list of email, sms
NOTIFY_CHANNELS=email

# SendGrid (Email)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=notifications@your-domain.com

# Twilio (SMS)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=+1234567890
